{
  "clangd.semanticHighlighting": true,
  "coc.preferences.semanticTokensHighlights": false,
  "semanticTokens.filetypes": ["c", "cpp", "cc", "h", "py", "java"],
  "suggest.labelMaxLength": 60,
  "suggest.completionItemKindLabels": {
    "class": "\uf0e8",
    "color": "\ue22b"
  },
  "cmake.formatter": "cmake-format",
  "clangd.path":"/Library/Developer/CommandLineTools/usr/bin/clangd",
  "clangd.inlayHints.enable": false,
  "clangd.arguments": ["--background-index=false"],
  "clangd.disableDiagnostics": true,
  "languageserver": {
      "coc-clangd": {
        "args": ["--resource-dir=/Library/Developer/CommandLineTools/usr/lib/clang/13.0.0/include","--background-index=false"],
              "path": "/Library/Developer/CommandLineTools/usr/bin/clangd",
              "command": "clangd",
              "rootPatterns": [".git/", "compile_flags.txt",
                            "compile_commands.json"],
              "filetypes":["h,c",
                        "cc",
                        "cpp",
                        "c++",
                        "objc",
                        "objcpp"]
      }
    },
  "colors.filetypes": ["*"],
  "git.addGBlameToBufferVar": true,
  "list.previewSplitRight": true
}

